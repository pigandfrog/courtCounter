<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Team"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="@+id/guideline11"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0625"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="33dp" />

    <TextView
        android:id="@+id/three_point_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/threes"
        app:layout_constraintLeft_toLeftOf="@+id/score_tv"
        app:layout_constraintRight_toLeftOf="@+id/guideline31"
        app:layout_constraintTop_toTopOf="@+id/guideline25" />

    <TextView
        android:id="@+id/two_point_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/twos"
        app:layout_constraintLeft_toLeftOf="@+id/three_point_tv"
        app:layout_constraintRight_toRightOf="@+id/three_point_tv"
        app:layout_constraintTop_toTopOf="@+id/guideline22"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/free_throws_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/free_throw"
        app:layout_constraintLeft_toLeftOf="@+id/two_point_tv"
        app:layout_constraintRight_toRightOf="@+id/two_point_tv"
        app:layout_constraintTop_toTopOf="@+id/guideline23" />

    <TextView
        android:id="@+id/shooting_percentage_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/shooting_percentage"
        app:layout_constraintLeft_toLeftOf="@+id/guideline29"
        app:layout_constraintRight_toLeftOf="@+id/guideline30"
        app:layout_constraintTop_toTopOf="@+id/score_tv" />

    <TextView
        android:id="@+id/score_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/score"
        app:layout_constraintLeft_toLeftOf="@+id/guideline11"
        app:layout_constraintRight_toLeftOf="@+id/guideline34"
        app:layout_constraintTop_toTopOf="@+id/guideline14" />

    <TextView
        android:id="@+id/three_attempted_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/attempted"
        app:layout_constraintLeft_toRightOf="@+id/three_point_tv"
        app:layout_constraintRight_toLeftOf="@+id/guideline33"
        app:layout_constraintTop_toTopOf="@+id/three_point_tv" />

    <TextView
        android:id="@+id/three_made_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/made"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline13"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        android:layout_marginRight="55dp"
        app:layout_constraintTop_toTopOf="@+id/three_attempted_tv"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.495" />

    <TextView
        android:id="@+id/two_attempted_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/attempted"
        app:layout_constraintLeft_toLeftOf="@+id/three_attempted_tv"
        app:layout_constraintRight_toRightOf="@+id/three_attempted_tv"
        app:layout_constraintTop_toTopOf="@+id/two_point_tv" />

    <TextView
        android:id="@+id/two_made_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/made"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/three_made_tv"
        app:layout_constraintTop_toTopOf="@+id/two_attempted_tv"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/free_throw_attempted_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/attempted"
        app:layout_constraintLeft_toLeftOf="@+id/two_attempted_tv"
        app:layout_constraintRight_toRightOf="@+id/two_attempted_tv"
        app:layout_constraintTop_toTopOf="@+id/free_throws_tv" />

    <TextView
        android:id="@+id/free_throw_made_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/made"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/two_made_tv"
        app:layout_constraintTop_toTopOf="@+id/free_throw_attempted_tv"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/return_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/go_back"
        app:layout_constraintTop_toTopOf="@+id/guideline24"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline11"
        app:layout_constraintRight_toLeftOf="@+id/guideline13"
        android:layout_marginRight="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.915625"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="489dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline13"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/other_teams_stats_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/other_teams_stats"
        android:tag="0"
        app:layout_constraintTop_toTopOf="@+id/guideline24"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline13"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        android:layout_marginRight="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline14"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14"
        tools:layout_editor_absoluteY="34dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline22"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline23"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline24"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.74" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline25"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline29"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.59099436" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline30"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline31"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.260788" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline32"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7748593" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline33"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.44090056" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline34"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.19324578" />

    <TextView
        android:id="@+id/free_throw_percentage_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/percentage"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline32"
        app:layout_constraintTop_toTopOf="@+id/guideline23"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        android:layout_marginRight="0dp" />
</android.support.constraint.ConstraintLayout>